<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/movie_app_background"
    android:orientation="vertical"
    tools:context=".Fragments.EntryFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:src="@drawable/movie_app_logo" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:textSize="35sp"
        android:text="@string/movie_app" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:text="@string/discover_the_latest_upcoming_movies_get_detailed_information_and_create_your_personalized_favorite_list" />

    <Button
        android:id="@+id/entryLoginBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/button_background"
        android:backgroundTint="@null"
        android:textColor="@color/white"
        android:text="@string/login" />

    <Button
        android:id="@+id/entryRegisterBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/button_background"
        android:backgroundTint="@null"
        android:textColor="@color/white"
        android:text="@string/register" />
</LinearLayout>